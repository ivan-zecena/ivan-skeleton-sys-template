<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>8db5810f-1022-47cc-856e-2156f651647f</groupId>
	<artifactId>ivan-skeleton-sys-template</artifactId>
	<version>1.0.0</version>
	<packaging>mule-application</packaging>

	<name>ivan-skeleton-sys-template</name>

	<description>Ivan Zecena's test api</description>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
		<json.logger.version>2.0.1</json.logger.version>
		<error.handler.plugin.version>1.0.3</error.handler.plugin.version>
		<application.name>ivan-skeleton-sys-template</application.name>
		<app.runtime>4.3.0-20210427</app.runtime>
		<mule.maven.plugin.version>3.5.1</mule.maven.plugin.version>
		<munit.version>2.3.5</munit.version>
		<maven.compiler.source>1.8</maven.compiler.source>
		<maven.compiler.target>1.8</maven.compiler.target>
		<maven.build.timestamp.format>yyyyMMdd'T'HHmmss'Z'</maven.build.timestamp.format>
		<patch>0</patch>
	</properties>

	<profiles>
		<profile>
			<id>dev1</id>
			<properties>
				<anypoint.environment.name>Development-1</anypoint.environment.name>
				<mule.env>dev1</mule.env>
			</properties>
		</profile>
		<profile>
			<id>dev2</id>
			<properties>
				<anypoint.environment.name>Development-2</anypoint.environment.name>
				<mule.env>dev2</mule.env>
			</properties>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
		</profile>
		<profile>
			<id>stage</id>
			<properties>
				<anypoint.environment.name>Stage</anypoint.environment.name>
				<mule.env>stage</mule.env>
			</properties>
		</profile>
		<profile>
			<id>cloudhub</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.mule.tools.maven</groupId>
						<artifactId>mule-maven-plugin</artifactId>
						<version>${mule.maven.plugin.version}</version>
						<extensions>true</extensions>
						<configuration>
							<skip>false</skip>
							<cloudHubDeployment>
								<muleVersion>4.3.0</muleVersion>
								<username>${cicd.yourAnypointName}</username>
								<password>${cicd.yourAnypointPass}</password>
								<environment>${anypoint.environment.name}</environment>
								<region>us-west-2</region>
								<workerType>Micro</workerType>
								<workers>1</workers>
								<applicationName>${application.name}-${mule.env}</applicationName>
								<objectStoreV2>true</objectStoreV2>
								<properties>
									<mule.env>${mule.env}</mule.env>
									<encryption.key>${encryption.key}</encryption.key>
									<anypoint.platform.analytics_base_uri>https://analytics-ingest.anypoint.mulesoft.com/</anypoint.platform.analytics_base_uri>
									<anypoint.platform.client_id>${anypoint.client_id}</anypoint.platform.client_id>
									<anypoint.platform.client_secret>${anypoint.client_pass}</anypoint.platform.client_secret>
									<anypoint.platform.base_uri>https://anypoint.mulesoft.com/</anypoint.platform.base_uri>
									<anypoint.platform.config.analytics.agent.enabled>true</anypoint.platform.config.analytics.agent.enabled>
									<!-- 						<secure::multiTenantRouter.accessKey>${secure::multiTenantRouter.accessKey}</secure::multiTenantRouter.accessKey>
									<secure::multiTenantRouter.secretKey>${secure::multiTenantRouter.secretKey}</secure::multiTenantRouter.secretKey>
			 -->
									<aws.region>${aws.region}</aws.region>
									<api.id>${api.id}</api.id>
								</properties>
							</cloudHubDeployment>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>rtf</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.mule.tools.maven</groupId>
						<artifactId>mule-maven-plugin</artifactId>
						<version>${mule.maven.plugin.version}</version>
						<extensions>true</extensions>
						<configuration>
							<runtimeFabricDeployment>
								<skipDeploymentVerification>false</skipDeploymentVerification>
								<uri>https://anypoint.mulesoft.com</uri>
								<muleVersion>4.3.0</muleVersion>
								<username>${cicd.yourAnypointName}</username>
								<password>${cicd.yourAnypointPass}</password>
								<environment>${anypoint.environment.name}</environment>
								<target>${deployment.target}</target>
								<applicationName>${project.artifactId}-${mule.env}</applicationName>
								<provider>MC</provider>
								<replicas>${replica.count}</replicas>
								<properties>
									<mule.env>${mule.env}</mule.env>
									<encryption.key>"${ENCRYPTION_KEY}"</encryption.key>
									<anypoint.platform.analytics_base_uri>https://analytics-ingest.anypoint.mulesoft.com/</anypoint.platform.analytics_base_uri>
									<anypoint.platform.client_id>${anypoint.client_id}</anypoint.platform.client_id>
									<!-- The below property is added in RTF Server so not needed-->
									<!--<anypoint.platform.client_secret>${anypoint.client_pass}</anypoint.platform.client_secret> -->
									<anypoint.platform.base_uri>https://anypoint.mulesoft.com/</anypoint.platform.base_uri>
									<anypoint.platform.config.analytics.agent.enabled>true</anypoint.platform.config.analytics.agent.enabled>
									<!-- <secure::multiTenantRouter.accessKey>"${MULTITENANT_ROUTER_ACCESS_KEY}"</secure::multiTenantRouter.accessKey>
									<secure::multiTenantRouter.secretKey>"${MULTITENANT_ROUTER_SECRET_KEY}"</secure::multiTenantRouter.secretKey> -->
									<aws.region>${aws.region}</aws.region>
									<api.id>${api.id}</api.id>
									<https.port>8081</https.port>
								</properties>
								<deploymentSettings>
									<enforceDeployingReplicasAcrossNodes>false</enforceDeployingReplicasAcrossNodes>
									<updateStrategy>${update.strategy}</updateStrategy>
									<clustered>false</clustered>
									<forwardSslSession>false</forwardSslSession>
									<lastMileSecurity>true</lastMileSecurity>
									<resources>
										<cpu>
											<reserved>${cpu.reserved}</reserved>
											<limit>${cpu.limit}</limit>
										</cpu>
										<memory>
											<reserved>${memory.reserved}</reserved>
										</memory>
									</resources>
								</deploymentSettings>
							</runtimeFabricDeployment>
							<classifier>mule-application</classifier>
							<sharedLibraries/>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

	<build>
		<finalName>${mule.env}_${project.artifactId}_${maven.build.timestamp}_${project.version}</finalName>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-clean-plugin</artifactId>
				<version>3.0.0</version>
			</plugin>
			<plugin>
				<groupId>org.mule.tools.maven</groupId>
				<artifactId>mule-maven-plugin</artifactId>
				<version>${mule.maven.plugin.version}</version>
				<extensions>true</extensions>
				<configuration>
					<skip>false</skip>
					<sharedLibraries/>
					<classifier>mule-application-example</classifier>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.7.0</version>
				<configuration>
					<compilerArgs>
						<args>-parameters</args>
					</compilerArgs>
				</configuration>
			</plugin>
			<!-- <plugin>
				<groupId>pl.project13.maven</groupId>
				<artifactId>git-commit-id-plugin</artifactId>
				<version>4.0.0</version>
				<executions>
					<execution>
						<id>get-the-git-infos</id>
						<goals>
							<goal>revision</goal>
						</goals>
						<phase>initialize</phase>
					</execution>
				</executions>
				<configuration>
					<generateGitPropertiesFile>true</generateGitPropertiesFile>
					<generateGitPropertiesFilename>${project.build.outputDirectory}/git.properties</generateGitPropertiesFilename>
					<includeOnlyProperties>
						<includeOnlyProperty>^git.build.(time|version)$</includeOnlyProperty>
						<includeOnlyProperty>^git.commit.id.(abbrev|full)$</includeOnlyProperty>
						<includeOnlyProperty>^git.dirty$</includeOnlyProperty>
						<includeOnlyProperty>^git.branch$</includeOnlyProperty>
					</includeOnlyProperties>
					<commitIdGenerationMode>full</commitIdGenerationMode>
				</configuration>
			</plugin> -->
			<plugin>
				<groupId>com.mulesoft.munit.tools</groupId>
				<artifactId>munit-maven-plugin</artifactId>
				<version>${munit.version}</version>
				<executions>
					<execution>
						<id>test</id>
						<phase>test</phase>
						<goals>
							<goal>test</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<coverage>
						<runCoverage>true</runCoverage>
						<failBuild>false</failBuild>
						<requiredApplicationCoverage>0</requiredApplicationCoverage>
						<requiredResourceCoverage>0</requiredResourceCoverage>
						<requiredFlowCoverage>0</requiredFlowCoverage>
						<formats>
							<format>console</format>
							<format>html</format>
						</formats>
					</coverage>
				</configuration>
			</plugin>
		</plugins>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>false</filtering>
			</resource>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
				<includes>
					<include>properties/configurations/config-common.yaml</include>
				</includes>
			</resource>
		</resources>
	</build>

	<dependencies>
		<!-- RAML dependency -->
		<dependency>
			<groupId>8db5810f-1022-47cc-856e-2156f651647f</groupId>
			<artifactId>version-template</artifactId>
			<version>1.0.0</version>
			<classifier>raml</classifier>
			<type>zip</type>
		</dependency>
		<!-- ____________________ -->
		<!-- CloudWatch and log4j dependencies -->
		<dependency>
			<groupId>8db5810f-1022-47cc-856e-2156f651647f</groupId>
			<artifactId>cloudwatchfactory</artifactId>
			<version>1.0.1</version>
			<classifier>custom</classifier>
			<type>jar</type>
		</dependency>
		<dependency>
